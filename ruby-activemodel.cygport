inherit rubygem

NAME="ruby-activemodel"
VERSION=4.0.12
RELEASE=1
CATEGORY="Ruby"
SUMMARY="Ruby Active Model extension"
DESCRIPTION="A toolkit for building modeling frameworks like Active Record and
Active Resource. Rich support for attributes, callbacks, validations, observers,
serialization, internationalization, and testing."

ARCH=noarch

PKG_NAMES="${NAME} ${NAME}-doc"
ruby_activemodel_CONTENTS="${RUBYGEM_INSTDIR#/} ${RUBYGEM_SPEC#/}"
ruby_activemodel_doc_CONTENTS=${RUBYGEM_DOCDIR#/}

